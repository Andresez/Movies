@model WarnerBros.Models.Movies

@{
    ViewData["Title"] = "Create";
}

<h1 style="color: white">New</h1>

<hr />
<div class="row">
    <div class="col-md-4" style="color: white;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Poster</label>
                <input asp-for="img" class="form-control" />
                <span asp-validation-for="img" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Synopsis</label>
                <input asp-for="sinopsis" class="form-control" />
                <span asp-validation-for="sinopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Director</label>
                <input asp-for="director" class="form-control" />
                <span asp-validation-for="director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Genre</label>
                <input asp-for="genero" class="form-control" />
                <span asp-validation-for="genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Punctuation</label>
                <input asp-for="puntuacion" class="form-control" min="0" max="5"/>
                <span asp-validation-for="puntuacion" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <button type="submit" class="btn btn-primary" /> <img src="https://clipart-library.com/images/yckrLBddi.png" style="width: 6%"></img> Add Movie</button>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List Movies</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
