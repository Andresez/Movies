@model WarnerBros.Models.Movies

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color: white">Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4" style="color: white">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                @* <label class="control-label">Poster</label>  *@
                <img src="@Model.img" style="width:100%"<img/>
                @* <input asp-for="img" class="form-control" disabled/>
                <span asp-validation-for="img" class="text-danger"></span>  *@
            </div>
            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="nombre" class="form-control" disabled/>
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Synopsis</label>
                <input asp-for="sinopsis" class="form-control" disabled/>
                <span asp-validation-for="sinopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Director</label>
                <input asp-for="director" class="form-control" disabled/>
                <span asp-validation-for="director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Genre</label>
                <input asp-for="genero" class="form-control" disabled/>
                <span asp-validation-for="genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Punctuation</label>
                <input asp-for="puntuacion" class="form-control" min="0" max="5" />
                <span asp-validation-for="puntuacion" class="text-danger"></span>
            </div>
            <hr/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> | <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
